<div class="nested-fields">

  <div class="row">
    <div class="col-8">
      <%= f.input :description, label: false, placeholder: 'Description'%>
    </div>
    <div class="col-2">
      <%= f.input :done, as: :boolean, checked_value: 1, unchecked_value: 0  %>
    </div>
    <div class="col-2">
      <%= link_to_remove_association f, class: "btn btn-sm btn-outline-primary" do %>
        <%= icon('fas', 'times') %>
      <% end %>
    </div>
  </div>

</div>